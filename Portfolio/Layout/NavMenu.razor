<nav class="fixed w-full top-0 z-50 bg-gray-900 bg-opacity-70 backdrop-blur-md shadow-md">
    <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">

            <!-- Logo / Nome -->
            <div class="flex-shrink-0">
                <a href="/" class="text-xl font-bold text-blue-400 hover:text-blue-300 transition">
                    Brendon Mauro
                </a>
            </div>

            <!-- Links Desktop -->
            <div class="hidden md:flex space-x-8">
                <NavLink class="nav-link" href="/">
                    <p class="text-gray-300 hover:text-white transition">Home</p>
                </NavLink>
                <NavLink class="nav-link" href="sobre">
                    <p class="text-gray-300 hover:text-white transition">Sobre</p>
                </NavLink>
                <NavLink class="nav-link" href="experiencia">
                    <p class="text-gray-300 hover:text-white transition">Experiência</p>
                </NavLink>
                
                <NavLink class="nav-link" href="projetos">
                    <p class="text-gray-300 hover:text-white transition">Projetos</p>
                </NavLink>
                <NavLink class="nav-link" href="contato">
                    <p class="text-gray-300 hover:text-white transition">Contato</p>
                </NavLink>
            </div>

            <!-- Botão Mobile -->
            <div class="md:hidden">
                <button @onclick="ToggleMenu"
                        class="text-gray-300 hover:text-white focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Menu Mobile -->
    @if (isOpen)
    {
        <div class="md:hidden bg-gray-800 bg-opacity-90 px-4 pt-2 pb-4 space-y-2">
            <a href="/" class="block text-gray-300 hover:text-white">Home</a>
            <a href="#sobre" class="block text-gray-300 hover:text-white">Sobre</a>
            <a href="#experiencia" class="block text-gray-300 hover:text-white">Experiência</a>
            <a href="#projetos" class="block text-gray-300 hover:text-white">Projetos</a>
            <a href="#contato" class="block text-gray-300 hover:text-white">Contato</a>
        </div>
    }
</nav>

@code {
    private bool isOpen = false;

    private void ToggleMenu()
    {
        isOpen = !isOpen;
    }
}
